MatrixApp

<MatrixApp@BoxLayout>:
    orientation: 'vertical'

    BoxLayout:
        # Ліва частина вікна (вкладки (фігово працюють))
        ScrollView:
            id: sv
            valign: 'top'
            Label:
                id: tab_normed_x
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]
                text: app.instructions
        # Права частина вікна (введення X, Y, P)
        BoxLayout:
            size_hint: .7, 1
            orientation: 'vertical'
            BoxLayout:
                # radio buttons
                BoxLayout:
                    size_hint: .2, 1
                    orientation: 'vertical'
                    CheckBox:
                        active: True
                        allow_no_selection: False
                        group: 'polinomes'
                        on_active: app.choose_polinome(1)
                    CheckBox:
                        group: 'polinomes'
                        allow_no_selection: False
                        on_active: app.choose_polinome(2)
                    CheckBox:
                        group: 'polinomes'
                        allow_no_selection: False
                        on_active: app.choose_polinome(3)
                    CheckBox:
                        group: 'polinomes'
                        allow_no_selection: False
                        on_active: app.choose_polinome(4)
                    CheckBox:
                        on_active: app.use_second_lambda_method = not app.use_second_lambda_method
                    CheckBox:
                        active: True
                        on_active: app.use_normed_values = not app.use_normed_values
                # labels for radio buttons
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'center'
                        text: 'Поліном Чебишова'
                    Label:
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'center'
                        text: 'Поліном Лежандра'
                    Label:
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'center'
                        text: 'Поліном Лагерра'
                    Label:
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'center'
                        text: 'Поліном Ерміта'
                    Label:
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'center'
                        text: 'лямбда (3 системи)'
                    Label:
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'center'
                        text: 'нормовані дані'
            BoxLayout:
                size_hint: 1, .9
                BoxLayout:
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: .2, 1
                        Label:
                            text: 'X1:'
                        Label:
                            text: 'X2:'
                        Label:
                            text: 'X3:'
                        Label:
                            text: 'Y:'
                    # labels with dimensions:
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 0, 0, '10dp', 0
                        Label:
                            id: dim_x1
                            text_size: self.width, self.height
                            halign: 'left'
                            valign: 'center'
                            text: "розмірність Х1"
                        Label:
                            id: dim_x2
                            text_size: self.width, self.height
                            halign: 'left'
                            valign: 'center'
                            text: "розмірність Х2"
                        Label:
                            id: dim_x3
                            text_size: self.width, self.height
                            halign: 'left'
                            valign: 'center'
                            text: "розмірність Х3"
                        Label:
                            id: dim_y
                            text_size: self.width, self.height
                            halign: 'left'
                            valign: 'center'
                            text: "розмірність Y"
                # labels for text inputs:
                BoxLayout:
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: .2, 1
                        Label:
                            text: 'P1'
                        Label:
                            text: 'P2'
                        Label:
                            text: 'P3'
                        Label:
                            text: 'i_Y'
                    # text inputs:
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 0, 0, '10dp', 0
                        TextInput:
                            id: input_p1
                            hint_text: str(app.all_p[0])
                            multiline: False
                            on_text: app.change_p(1, self.text)
                        TextInput:
                            id: input_p2
                            hint_text: str(app.all_p[1])
                            multiline: False
                            on_text: app.change_p(2, self.text)
                        TextInput:
                            id: input_p3
                            hint_text: str(app.all_p[2])
                            multiline: False
                            on_text: app.change_p(3, self.text)
                        TextInput:
                            id: input_i_y
                            hint_text: str(app.k_y)
                            multiline: False
            BoxLayout:
                size_hint: 1, .9
                Label:
                    id: error_label
                    text: 'Заповніть всі поля'
            BoxLayout:
                orientation: 'vertical'
                padding: '2dp'
                BoxLayout:
                    Button:
                        text: 'Input X'
                        on_release: app.file_chooser('x')
                    Button:
                        text: 'Input Y'
                        on_release: app.file_chooser('y')
                BoxLayout:
                    Button:
                        text: 'Calculate'
                        on_release:
                            app.get_values(input_i_y.text);
                            app.start()
                BoxLayout:
                    Button:
                        text: 'Save'
                        on_press: app.save_file()
                    Button:
                        id: graphic
                        text: 'Graphic'
                        disabled: True
                        on_press: app.do_plot()