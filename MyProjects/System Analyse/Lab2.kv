BoxLayoutExample

<WindowManager@ScreenManager>
    InputWindow:
    SecondWindow:
    ThirdWindow:

<InputWindow@Screen>
    BoxLayoutExample

<BoxLayoutExample@BoxLayout>:
    orientation: "vertical"
    BoxLayout:
        Button:
            id: selected_path
            text: "bx1"
        Button:
            text: "Start"
            on_release:
                app.start()
    BoxLayout:
        BoxLayout:
            Button:
                text: "bx2"
        BoxLayout:
            BoxLayout:
                Button:
                    text: "Load X"
                    on_release:
                        app.file_chooser('x')
                Button:
                    text: "Load Y"
                    on_release:
                        app.file_chooser('y')
    BoxLayout:
        size_hint: 1, .15
        Button:
            text: "<="
        Button:
            text: "=>"

