<WindowManager@ScreenManager>
    FirstWindow:
    SecondWindow:
    ThirdWindow:

<FirstWindow@Screen>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        WidgetExample:
        BoxLayout:
            cols: 2
            orientation: "horizontal"
            Button:
                text: "Previous Screen"
                font_size: 32
                on_release:
                    root.manager.current = "third"
                    root.manager.transition.direction = 'right'
            Button:
                text: "Next Screen"
                font_size: 32
                on_release:
                    root.manager.current = "second"
                    root.manager.transition.direction = 'left'

<SecondWindow@Screen>
    name: "second"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        ImageExample:
        BoxLayout:
            cols: 2
            orientation: "horizontal"
            Button:
                text: "Previous Screen"
                font_size: 32
                on_release:
                    root.manager.current = "first"
                    root.manager.transition.direction = 'right'
            Button:
                text: "Next Screen"
                font_size: 32
                on_release:
                    root.manager.current = "third"
                    root.manager.transition.direction = 'left'

<ThirdWindow@Screen>
    name: "third"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        ExampleTabWindow:
        BoxLayout:
            cols: 2
            orientation: "horizontal"
            Button:
                text: "Previous Screen"
                font_size: 32
                on_release:
                    root.manager.current = "second"
                    root.manager.transition.direction = 'right'
            Button:
                text: "Next Screen"
                font_size: 32
                on_release:
                    root.manager.current = "first"
                    root.manager.transition.direction = 'left'


<ExampleTabWindow@TabbedPanel>:
    #do_default_tab: False
    default_tab_text: "I`m a default"
    #top-bottom left-mid-right
    tab_pos: 'bottom_right'
    TabbedPanelHeader:
        text: "I`m a header"
    TabbedPanelItem:
        text: "tab1"
        background_normal: "RESOURCES/images/cake.jpg"
        BoxLayout:
            Image:
                source: "RESOURCES/images/cake.jpg"
            Label:
                text: "It`s a first tab"
    TabbedPanelItem:
        text: "tab2"
        Label:
            text: "It`s a second tab"
    TabbedPanelItem:
        text: "I`m red"
        background_color: 1, 0, 0, 1
        BackgroundLabel:
            text: "It`s a red tab"
            background_color: 1, 0, 0, 0.3


